<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.eda.dao.ClassifyDao">

    <resultMap type="com.eda.entity.Classify" id="ClassifyMap">
        <result property="cId" column="c_id" jdbcType="INTEGER"/>
        <result property="cType" column="c_type" jdbcType="VARCHAR"/>
        <result property="dId" column="d_id" jdbcType="INTEGER"/>
        <result property="test1" column="test1" jdbcType="VARCHAR"/>
        <result property="test2" column="test2" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="ClassifyMap">
        select c_id,
               c_type,
               d_id,
               test1,
               test2
        from classify
        where c_id = #{cId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="ClassifyMap">
        select
        c_id, c_type, d_id, test1, test2
        from classify
        <where>
            <if test="cId != null">
                and c_id = #{cId}
            </if>
            <if test="cType != null and cType != ''">
                and c_type = #{cType}
            </if>
            <if test="dId != null">
                and d_id = #{dId}
            </if>
            <if test="test1 != null and test1 != ''">
                and test1 = #{test1}
            </if>
            <if test="test2 != null and test2 != ''">
                and test2 = #{test2}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from classify
        <where>
            <if test="cId != null">
                and c_id = #{cId}
            </if>
            <if test="cType != null and cType != ''">
                and c_type = #{cType}
            </if>
            <if test="dId != null">
                and d_id = #{dId}
            </if>
            <if test="test1 != null and test1 != ''">
                and test1 = #{test1}
            </if>
            <if test="test2 != null and test2 != ''">
                and test2 = #{test2}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="cId" useGeneratedKeys="true">
        insert into classify(c_type, d_id, test1, test2)
        values (#{cType}, #{dId}, #{test1}, #{test2})
    </insert>

    <insert id="insertBatch" keyProperty="cId" useGeneratedKeys="true">
        insert into classify(c_type, d_id, test1, test2)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.cType}, #{entity.dId}, #{entity.test1}, #{entity.test2})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="cId" useGeneratedKeys="true">
        insert into classify(c_type, d_id, test1, test2)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.cType}, #{entity.dId}, #{entity.test1}, #{entity.test2})
        </foreach>
        on duplicate key update
        c_type = values(c_type),
        d_id = values(d_id),
        test1 = values(test1),
        test2 = values(test2)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update classify
        <set>
            <if test="cType != null and cType != ''">
                c_type = #{cType},
            </if>
            <if test="dId != null">
                d_id = #{dId},
            </if>
            <if test="test1 != null and test1 != ''">
                test1 = #{test1},
            </if>
            <if test="test2 != null and test2 != ''">
                test2 = #{test2},
            </if>
        </set>
        where c_id = #{cId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from classify
        where c_id = #{cId}
    </delete>

</mapper>

