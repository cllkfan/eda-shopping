<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.eda.dao.UcDao">

    <resultMap type="com.eda.entity.Uc" id="UcMap">
        <result property="uId" column="u_id" jdbcType="INTEGER"/>
        <result property="cId" column="c_id" jdbcType="INTEGER"/>
        <result property="test1" column="test1" jdbcType="VARCHAR"/>
        <result property="test2" column="test2" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="UcMap">
        select u_id,
               c_id,
               test1,
               test2
        from uc
        where u_id = #{uId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="UcMap">
        select
        u_id, c_id, test1, test2
        from uc
        <where>
            <if test="uId != null">
                and u_id = #{uId}
            </if>
            <if test="cId != null">
                and c_id = #{cId}
            </if>
            <if test="test1 != null and test1 != ''">
                and test1 = #{test1}
            </if>
            <if test="test2 != null and test2 != ''">
                and test2 = #{test2}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from uc
        <where>
            <if test="uId != null">
                and u_id = #{uId}
            </if>
            <if test="cId != null">
                and c_id = #{cId}
            </if>
            <if test="test1 != null and test1 != ''">
                and test1 = #{test1}
            </if>
            <if test="test2 != null and test2 != ''">
                and test2 = #{test2}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="uId" useGeneratedKeys="true">
        insert into uc(c_id, test1, test2)
        values (#{cId}, #{test1}, #{test2})
    </insert>

    <insert id="insertBatch" keyProperty="uId" useGeneratedKeys="true">
        insert into uc(c_id, test1, test2)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.cId}, #{entity.test1}, #{entity.test2})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="uId" useGeneratedKeys="true">
        insert into uc(c_id, test1, test2)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.cId}, #{entity.test1}, #{entity.test2})
        </foreach>
        on duplicate key update
        c_id = values(c_id),
        test1 = values(test1),
        test2 = values(test2)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update uc
        <set>
            <if test="cId != null">
                c_id = #{cId},
            </if>
            <if test="test1 != null and test1 != ''">
                test1 = #{test1},
            </if>
            <if test="test2 != null and test2 != ''">
                test2 = #{test2},
            </if>
        </set>
        where u_id = #{uId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from uc
        where u_id = #{uId}
    </delete>

</mapper>

