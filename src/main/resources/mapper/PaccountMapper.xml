<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.eda.dao.PaccountDao">

    <resultMap type="com.eda.entity.Paccount" id="PaccountMap">
        <result property="pacId" column="pac_id" jdbcType="INTEGER"/>
        <result property="uId" column="u_id" jdbcType="INTEGER"/>
        <result property="rest" column="rest" jdbcType="VARCHAR"/>
        <result property="test1" column="test1" jdbcType="VARCHAR"/>
        <result property="test2" column="test2" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="PaccountMap">
        select pac_id,
               u_id,
               rest,
               test1,
               test2
        from paccount
        where pac_id = #{pacId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="PaccountMap">
        select
        pac_id, u_id, rest, test1, test2
        from paccount
        <where>
            <if test="pacId != null">
                and pac_id = #{pacId}
            </if>
            <if test="uId != null">
                and u_id = #{uId}
            </if>
            <if test="rest != null and rest != ''">
                and rest = #{rest}
            </if>
            <if test="test1 != null and test1 != ''">
                and test1 = #{test1}
            </if>
            <if test="test2 != null and test2 != ''">
                and test2 = #{test2}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from paccount
        <where>
            <if test="pacId != null">
                and pac_id = #{pacId}
            </if>
            <if test="uId != null">
                and u_id = #{uId}
            </if>
            <if test="rest != null and rest != ''">
                and rest = #{rest}
            </if>
            <if test="test1 != null and test1 != ''">
                and test1 = #{test1}
            </if>
            <if test="test2 != null and test2 != ''">
                and test2 = #{test2}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="pacId" useGeneratedKeys="true">
        insert into paccount(u_id, rest, test1, test2)
        values (#{uId}, #{rest}, #{test1}, #{test2})
    </insert>

    <insert id="insertBatch" keyProperty="pacId" useGeneratedKeys="true">
        insert into paccount(u_id, rest, test1, test2)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.uId}, #{entity.rest}, #{entity.test1}, #{entity.test2})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="pacId" useGeneratedKeys="true">
        insert into paccount(u_id, rest, test1, test2)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.uId}, #{entity.rest}, #{entity.test1}, #{entity.test2})
        </foreach>
        on duplicate key update
        u_id = values(u_id),
        rest = values(rest),
        test1 = values(test1),
        test2 = values(test2)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update paccount
        <set>
            <if test="uId != null">
                u_id = #{uId},
            </if>
            <if test="rest != null and rest != ''">
                rest = #{rest},
            </if>
            <if test="test1 != null and test1 != ''">
                test1 = #{test1},
            </if>
            <if test="test2 != null and test2 != ''">
                test2 = #{test2},
            </if>
        </set>
        where pac_id = #{pacId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from paccount
        where pac_id = #{pacId}
    </delete>

</mapper>

